<form action="{{ url }}" method="post">

    {% if isLogin %}
        <div class="">
            <div class="form-check check-r">
                <input
                        name="is_done"
                        class="form-check-input"
                        type="checkbox"
                        id="flexCheckChecked"
                        {% if task.status == 'done' %} checked {% endif %}>
                <label class="form-check-label" for="flexCheckChecked">
                    Выполнена
                </label>
            </div>
        </div>
    {% endif %}

    <div class="mb-3">
        <label for="user-name-form" class="form-label">
            Имя пользователя
        </label>
        <input
                name="user_name"
                value="{{ task.user_name }}"
                class="form-control {% if errors.user_name %} is-invalid {% endif %}"
                id="user-name-form"
                placeholder="Введите имя пользователя">
        <div id="user-name-formFeedback" class="invalid-feedback">{{ errors.user_name }}</div>
    </div>

    <div class="mb-3">
        <label for="email-form" class="form-label">Email</label>
        <input
                type="email"
                name="email"
                value="{{ task.email }}"
                class="form-control {% if errors.email %} is-invalid  {% endif %}"
                id="email-form"
                placeholder="Введите email">
        <div id="email-formFeedback" class="invalid-feedback">{{ errors.email }}</div>
    </div>

    <div class="mb-3">
        <label for="text-form" class="form-label">Текст задачи</label>
        <textarea
                name="text"
                class="form-control {% if errors.text %}  is-invalid {% endif %}"
                id="text-form"
                rows="3">{{ task.text }}</textarea>
        <div id="text-formFeedback" class="invalid-feedback">{{ errors.text }}</div>
    </div>

    <button type="submit" class="btn btn-primary mb-3">Сохранить</button>

    {% if isLogin %}
        <a href="/">Вернуться</a>
    {% endif %}
</form>
